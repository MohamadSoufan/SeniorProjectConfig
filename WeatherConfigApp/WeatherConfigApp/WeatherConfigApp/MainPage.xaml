<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:WeatherConfigApp"
             x:Class="WeatherConfigApp.MainPage">


    <ContentPage.Title>Soufan Weather Station</ContentPage.Title>
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="+"
                     Activated="ToolbarItem_Activated" Priority="0"/>
    </ContentPage.ToolbarItems>
    <StackLayout>
    <SearchBar></SearchBar>
    <ListView x:Name="StationsListView">
        <ListView.ItemTemplate>
            <DataTemplate>
                <TextCell Text="{Binding Name}"
                          Detail="{Binding Name}"/>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
    </StackLayout>
