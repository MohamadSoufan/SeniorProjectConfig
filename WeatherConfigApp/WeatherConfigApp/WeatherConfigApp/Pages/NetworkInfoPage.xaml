<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WeatherConfigApp.Pages.NetworkInfoPage">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Padding="4,12,4,1" Spacing="50">

                <Entry x:Name="NetworkSsidEntry" Placeholder="Network SSID" TextChanged="NetworkSsidEntry_TextChanged" HeightRequest="40" WidthRequest="250" VerticalOptions="Center" HorizontalOptions="Center" />
                <Entry x:Name="NetworkPwdEntry" Placeholder="Network Password" IsPassword="True" TextChanged="NetworkPwdEntry_TextChanged" HeightRequest="40" WidthRequest="250" VerticalOptions="Center" HorizontalOptions="Center" />

                <Button x:Name="SendBtn" Clicked="SendBtn_Clicked" IsEnabled="False" Text="Send" WidthRequest="200" HeightRequest="40" VerticalOptions="Center" HorizontalOptions="Center"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>