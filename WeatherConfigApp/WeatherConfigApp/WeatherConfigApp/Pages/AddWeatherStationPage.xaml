<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WeatherConfigApp.AddWeatherStationPage">

    <ContentPage.Title>Add Station</ContentPage.Title>

    <StackLayout Padding="4,12,4,1" Spacing="30">
        <Entry x:Name="StationNameEntry" Placeholder="Station Name"  HeightRequest="40" WidthRequest="356" VerticalOptions="Center" HorizontalOptions="Center"/>
        <Button x:Name="BtConnectButton" Text="Connect to Device" HorizontalOptions="CenterAndExpand" Clicked="BtConnectButton_Clicked"/>
        <Button x:Name="AddButton" Text="Add" HorizontalOptions="Center" Clicked="AddButton_Clicked" IsEnabled="True"/>

    </StackLayout>
</ContentPage>