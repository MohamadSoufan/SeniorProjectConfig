<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WeatherConfigApp.Pages.PairDevice">
    <ContentPage.Title>Pair Device</ContentPage.Title>
    <StackLayout>
        <Button x:Name="ScanBtn" Text="Scan Devices" HorizontalOptions="Center" Margin="20, 20" Clicked="ScanBtn_Clicked"></Button>
        <ListView x:Name="DevicesListView" VerticalOptions="StartAndExpand">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout>
                            <Label Text="{Binding NativeDevice.Id}"/>
                            <Label Text="{Binding NativeDevice.Name}"/>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>