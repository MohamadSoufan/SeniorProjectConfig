<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WeatherConfigApp.Pages.WeatherStationPage">
    <StackLayout Padding="20,15">
        <StackLayout Padding="5,5" Orientation="Horizontal">
            <Label Text="Station Name:"/>
            <Label x:Name="NameLabel" Text="{Binding Station.Name}"/>
        </StackLayout>
        <StackLayout Padding="5,5" Orientation="Horizontal">
            <Label Text="Station Status:"/>
            <Label x:Name="StatusLabel" Text="{Binding Station.ConnectionStatus}"/>
        </StackLayout>
        <StackLayout Padding="0,50">
            <Button x:Name="ConnectBtn" IsEnabled="True" IsVisible="True" Text="Connect to Device" HorizontalOptions="CenterAndExpand" Clicked="ConnectBtn_Clicked"/>
        </StackLayout>
    </StackLayout>
</ContentPage>