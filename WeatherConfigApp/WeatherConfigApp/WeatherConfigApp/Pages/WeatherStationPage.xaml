<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WeatherConfigApp.Pages.WeatherStationPage">
    <StackLayout Padding="50,20">
        <StackLayout Padding="5,5" Orientation="Horizontal">
            <Label Text="Station Name:"/>
            <Label x:Name="NameLabel" Text="{Binding Station.Name}"/>
        </StackLayout>
        <StackLayout Padding="5,5" Orientation="Horizontal">
            <Label Text="Decvice Connected to:"/>
            <Label x:Name="DeviceLabel" Text="{Binding Station.ConnectedDeviceId}"/>
        </StackLayout>
        <Button x:Name="ConnectBtn" IsEnabled="False" IsVisible="False" Text="Connect to Device" HorizontalOptions="CenterAndExpand" Clicked="ConnectBtn_Clicked"/>
    </StackLayout>
</ContentPage>